# validation_script.py: Validate E-M329 SNP calls in BAM files
# Purpose: Cross-check SNP calls (CTS6773, M3987, Y471213) for accuracy

import pandas as pd
import subprocess

# Placeholder: Replace with real BAM/VCF paths (I10145, JK2134)
bam_files = ['I10145.bam', 'JK2134.bam']
snps = ['CTS6773', 'M3987', 'Y471213']
positions = ['Y:1234567', 'Y:2345678', 'Y:3456789']  # Update with real Y-chr positions

results = []
for bam, snp, pos in zip(bam_files, snps, positions):
    # Run SAMtools mpileup for SNP validation
    cmd = f"samtools mpileup -r {pos} {bam}"
    output = subprocess.run(cmd, shell=True, capture_output=True, text=True).stdout
    results.append({'SNP': snp, 'Sample': bam, 'Status': 'Present' if output else 'Absent'})

# Save results
df = pd.DataFrame(results)
df.to_csv('../data/validation_results.csv', index=False)
print('Validation complete, results in data/validation_results.csv')
